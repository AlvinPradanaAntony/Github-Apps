<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubApps" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorPrimaryVariant">@color/color_blue</item>
        <item name="colorOnPrimary">@color/color_blue</item>
        <item name="android:colorBackground">@color/background_White</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_deeppurple</item>
        <item name="colorSecondaryVariant">@color/color_blue</item>
        <item name="colorOnSecondary">@color/color_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="AppThemeNoAppBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorPrimaryVariant">@color/color_blue</item>
        <item name="colorOnPrimary">@color/color_blue</item>
        <item name="android:colorBackground">@color/background_White</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_deeppurple</item>
        <item name="colorSecondaryVariant">@color/color_blue</item>
        <item name="colorOnSecondary">@color/color_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>